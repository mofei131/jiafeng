	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-left: 27rpx;
	box-sizing: border-box;
	margin: 20rpx auto;
}

